[Unit]
Description=adsbxfeed
Wants=network.target
After=network.target

[Service]
User=adsbxfeed
RuntimeDirectory=adsbxfeed
ExecStart=/usr/local/bin/adsbxfeed.sh
Type=simple
Restart=always
RestartSec=30
StartLimitInterval=1
StartLimitBurst=100
SyslogIdentifier=adsbxfeed
Nice=-1

[Install]
WantedBy=default.target
